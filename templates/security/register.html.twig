{% extends 'base.html.twig' %}

{% block title %}Register - {% endblock %}

{% block body %}
    <div class="w-full max-w-xs mx-auto mt-5">
        {{ form_start(form, {'attr': {'class': 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4'}}) }}
            <div class="mb-4">
                {{ form_label(form.username, "Gebruikersnaam",{'attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            </div>
            <div class="mb-6">
                {{ form_label(form.password, "Wachtwoord",{'attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                <p class="text-xs italic">Please choose a password.</p>
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Register
                </button>
{#                <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">#}
{#                    Forgot Password?#}
{#                </a>#}
            </div>
        {{ form_end(form) }}
    </div>

{#        {{ form_widget(form) }}#}
{#        <button class="btn">{{ button_label|default('Save') }}</button>#}

{% endblock %}