<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} Tour de France 2020</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{ encore_entry_link_tags('tailwind') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="flex flex-col h-full">
            <header class="text-gray-700 body-font bg-yellow-100 flex-initial w-full">
                <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
                    <nav class="flex md:w-2/5 flex-wrap items-center text-base md:ml-auto justify-around sm:justify-start">
                        <a href="{{ path('etappe_index') }}" class="mr-4 hover:text-gray-900 cursor-pointer px-1 py-3">Etappe's</a>
                        <a href="{{ path('regel_page') }}" class="mr-4 hover:text-gray-900 cursor-pointer px-1 py-3">Regels</a>
                        <a href="{{ path('formulier_page') }}" class="mr-4 hover:text-gray-900 cursor-pointer px-1 py-3">Formulier</a>
                        <a href="{{ path('blog_index') }}" class="mr-4 hover:text-gray-900 cursor-pointer px-1 py-3">BeforeStartBlog</a>
                    </nav>
                    <a href="{{ path('home_page') }}" class="flex order-first md:order-none md:w-2/5 title-font font-medium items-center text-gray-900 md:items-center mb-2 sm:mb-0 md:justify-start justify-center">
                        <img src="{{ asset('build/images/logo.svg') }}" alt="Logo" class="w-1/5 rounded-full">
                        <span class="ml-3 text-xl">Tour de France</span>
                    </a>
                    <div class="md:w-1/5 inline-flex md:justify-end ml-5 md:ml-0 hidden md:inline-flex">
                        <a href="{{ asset('build/files/Tourspel2020formulier.xlsx') }}" class="cursor-pointer inline-flex items-center bg-gray-200 border-0 py-1 px-3 focus:outline-none hover:bg-gray-300 rounded text-base mt-4 md:mt-0">Download
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                                <path d="M5 12h14M12 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </header>
            <div class="container mx-auto p-5 content overflow-x-scroll h-full" style="max-width: 100vw">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
