<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} Tour de France 2020</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{ encore_entry_link_tags('tailwind') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="flex flex-col h-full">
            <header class="text-gray-700 body-font bg-yellow-100 flex-initial">
                <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
                    <nav class="flex lg:w-2/5 flex-wrap items-center text-base md:ml-auto">
                        <a href="{{ path('etappe_index') }}" class="mr-5 hover:text-gray-900 cursor-pointer px-1 py-3">Etappe's</a>
                        <a href="{{ path('formulier_page') }}" class="mr-5 hover:text-gray-900 cursor-pointer px-1 py-3">Formulier</a>
{#                        <a href="" class="mr-5 hover:text-gray-900 cursor-pointer">Third Link</a>#}
{#                        <a href="" class="hover:text-gray-900 cursor-pointer">Fourth Link</a>#}
                    </nav>
                    <a href="{{ path('home_page') }}" class="flex order-first lg:order-none lg:w-1/5 title-font font-medium items-center text-gray-900 lg:items-center mb-2 sm:mb-0 lg:justify-center sm:justify-start justify-center">
                        <img src="{{ asset('build/images/logo.svg') }}" alt="Logo" class="w-1/5 rounded-full">
                        <span class="ml-3 text-xl">Tour de France</span>
                    </a>
                    <div class="lg:w-2/5 inline-flex lg:justify-end ml-5 lg:ml-0 hidden md:inline-flex">
                        <button class="inline-flex items-center bg-gray-200 border-0 py-1 px-3 focus:outline-none hover:bg-gray-300 rounded text-base mt-4 md:mt-0">Aanmelden
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                                <path d="M5 12h14M12 5l7 7-7 7"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </header>
            <div class="container mx-auto flex flex-wrap p-5 flex-col flex-auto content">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
