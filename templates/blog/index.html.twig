{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <section class="text-gray-700 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-wrap -mx-4 -my-8">
                {% for blog in blogs %}
                <div class="py-8 px-4 lg:w-1/3">
                    <div class="h-full flex items-start">
                        <div class="w-12 flex-shrink-0 flex flex-col text-center leading-none">
                            <span class="text-gray-500 pb-2 mb-2 border-b-2 border-gray-300">{{ blog.createdAt|date("M") }}</span>
                            <span class="font-medium text-xl text-gray-800 title-font">{{ blog.createdAt|date("d") }}</span>
                        </div>
                        <div class="flex-grow pl-6">
{#                            <h2 class="tracking-widest text-xs title-font font-medium text-indigo-500 mb-1">CATEGORY</h2>#}
                            <h1 class="title-font text-xl font-medium text-gray-900 mb-3">{{ blog.Titel }}</h1>
                            <p class="leading-relaxed mb-2 ">{{ blog.content|u.truncate(145, '...')|striptags }}</p>
                            <a href="{{ path('blog_show', {'id': blog.id}) }}" class="inline-flex items-center link">
                                Bekijk
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <div class="container mx-auto">
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-blue" href="{{ path('blog_new') }}">Nieuw blog</a>
        {% endif %}
    </div>
{% endblock %}
