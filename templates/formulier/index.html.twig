    <div {{ formulier.Type is same as ("Regels") ? "class='verslag'" : "class='flex justify-center flex-col w-full'" }}>
        <h1 class="text-center">{{ formulier.titel }}</h1>

        {% if "now"|date("Y") > formulier.year %}
            <div class="alert alert-danger">
                <strong>Let op dit!</strong> Deze content is van {{ formulier.year }}, nieuwe content komt later!
            </div>
        {% endif %}

        {{ formulier.content|raw }}

        {% if is_granted("ROLE_ADMIN") %}
            <a class="btn btn-green mt-4 w-32 text-center" href="{{ path("regel_edit", {'id': formulier.id}) }}">Aanpassen</a>
        {% endif %}
    </div>
{% endblock %}
